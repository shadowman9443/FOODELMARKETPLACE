<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/application_background"
    android:orientation="vertical"
    android:padding="0dp" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/rlheader" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/HeaderShow1"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:padding="10dp" >

            <TextView
                android:id="@+id/tvFirstName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:text="@string/BookTable"
                android:textColor="@color/application_common_text"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/etOrder"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/radious_button"
                android:hint="Order"
                android:inputType="textPersonName"
                android:maxLength="500"
                android:textColor="#000000"
                android:textCursorDrawable="@null"
                android:textSize="12sp"
                android:textStyle="normal" >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/etName"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/radious_button"
                android:hint="Name"
                android:inputType="textPersonName"
                android:maxLength="500"
                android:textColor="#000000"
                android:textCursorDrawable="@null"
                android:textSize="12sp"
                android:textStyle="normal" >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/etMobileNo"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/radious_button"
                android:hint=" Mobile No"
                android:inputType="number"
                android:maxLength="500"
                android:textColor="#000000"
                android:textCursorDrawable="@null"
                android:textSize="12sp"
                android:textStyle="normal" >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/etTotal"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/radious_button"
                android:hint="Total"
                android:inputType="text"
                android:maxLength="500"
                android:textColor="#000000"
                android:textCursorDrawable="@null"
                android:textSize="12sp"
                android:textStyle="normal"
                android:visibility="gone" >

                <requestFocus />
            </EditText>

          

            <TimePicker
                android:id="@+id/timePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:visibility="gone"/>

            <EditText
                android:id="@+id/etPartySize"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/radious_button"
                android:hint="Party Size"
                android:inputType="number"
                android:maxLength="500"
                android:textColor="#000000"
                android:textCursorDrawable="@null"
                android:textSize="12sp"
                android:textStyle="normal" >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/etNotes"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/radious_button"
                android:hint="Notes"
                android:inputType="text"
                android:maxLength="500"
                android:textColor="#000000"
                android:textCursorDrawable="@null"
                android:textSize="12sp"
                android:textStyle="normal" >

                <requestFocus />
            </EditText>

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/radious_button"
                android:onClick="onCustomerSignUp"
                android:text="SEND "
                android:textColor="#C4CDE0"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>