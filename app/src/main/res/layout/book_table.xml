<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/application_background"
    android:orientation="vertical"
    android:padding="0dp" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/rlheader" 
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/HeaderShow1"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:padding="10dp" 
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/tvFirstName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:text="@string/BookTable"
                android:textColor="@color/application_common_text"
                android:textSize="20sp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/homeimage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="2dp"
                android:src="@drawable/book_a_table_top" />

            <EditText
                android:id="@+id/etFirstName"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/radious_login"
                android:hint="First Name"
                android:inputType="textCapWords"
                android:maxLength="500"
                android:paddingLeft="15dp"
                android:textColor="@color/application_common_text"
                android:textColorHint="@color/application_text_color_hint"
                android:textCursorDrawable="@null"
                android:textSize="15sp"
                android:textStyle="normal" >
            </EditText>

            <EditText
                android:id="@+id/etSurName"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/radious_login"
                android:hint="Surname"
                android:inputType="textCapWords"
                android:maxLength="500"
                android:paddingLeft="15dp"
                android:textColor="@color/application_common_text"
                android:textColorHint="@color/application_text_color_hint"
                android:textCursorDrawable="@null"
                android:textSize="15sp"
                android:textStyle="normal" >
            </EditText>

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/radious_login"
                android:hint="Email Address"
                android:inputType="textEmailAddress"
                android:maxLength="500"
                android:paddingLeft="15dp"
                android:textColor="@color/application_common_text"
                android:textColorHint="@color/application_text_color_hint"
                android:textCursorDrawable="@null"
                android:textSize="15sp"
                android:textStyle="normal" >
            </EditText>

            <EditText
                android:id="@+id/etMobileNo"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/radious_login"
                android:hint="Mobile No"
                android:inputType="number"
                android:maxLength="500"
                android:paddingLeft="15dp"
                android:textColor="@color/application_common_text"
                android:textColorHint="@color/application_text_color_hint"
                android:textCursorDrawable="@null"
                android:textSize="15sp"
                android:textStyle="normal" >
            </EditText>

            <EditText
                android:id="@+id/etDateTime"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/radious_button"
                android:hint="Date Time"
                android:inputType="text"
                android:maxLength="500"
                android:textColor="@color/application_common_text"
                android:textCursorDrawable="@null"
                android:textSize="12sp"
                android:textStyle="normal"
                android:visibility="gone" >
            </EditText>

            <EditText
                android:id="@+id/etxt_fromdate"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/radious_login"
                android:clickable="true"
                android:hint="Date "
                android:maxLength="500"
                android:onClick="EXTFROMDATE"
                android:paddingLeft="15dp"
                android:textColor="@color/application_common_text"
                android:textColorHint="@color/application_text_color_hint"
                android:textCursorDrawable="@null"
                android:textSize="15sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/etxt_todate"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/radious_button"
                android:hint="Date Time"
                android:inputType="text"
                android:maxLength="500"
                android:textColor="@color/application_common_text"
                android:textCursorDrawable="@null"
                android:textSize="12sp"
                android:textStyle="normal"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/habijabi"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:weightSum="2" >

                <LinearLayout
                    android:id="@+id/etPar"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/textViewTime"
                        android:layout_width="fill_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/radious_login"
                        android:gravity="left"
                        android:hint="Time"
                        android:maxLength="500"
                        android:paddingLeft="15dp"
                        android:paddingRight="5dp"
                        android:paddingTop="12dp"
                        android:textColor="@color/application_common_text"
                        android:textColorHint="@color/application_text_color_hint"
                        android:textCursorDrawable="@null"
                        android:textSize="15sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <EditText
                    android:id="@+id/etPartySize"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/radious_login"
                    android:hint="Party Size"
                    android:inputType="number"
                    android:maxLength="500"
                    android:paddingLeft="12dp"
                    android:textColor="@color/application_common_text"
                    android:textColorHint="@color/application_text_color_hint"
                    android:textCursorDrawable="@null"
                    android:textSize="15sp"
                    android:textStyle="normal" >
                </EditText>
            </LinearLayout>

            <TextView
                android:id="@+id/textViewTimetest"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/radious_login"
                android:gravity="left"
                android:hint="Time"
                android:maxLength="500"
                android:paddingLeft="15dp"
                android:paddingTop="12dp"
                android:textColor="@color/application_common_text"
                android:textColorHint="@color/application_text_color_hint"
                android:textCursorDrawable="@null"
                android:textSize="15sp"
                android:textStyle="normal"
                android:visibility="gone" />

            <EditText
                android:id="@+id/etxt_toTime"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/radious_button"
                android:hint="Date Time"
                android:inputType="text"
                android:maxLength="500"
                android:textColor="@color/application_common_text"
                android:textCursorDrawable="@null"
                android:textSize="12sp"
                android:textStyle="normal"
                android:visibility="gone" />

            <Button
                android:id="@+id/button"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginTop="3dp"
                android:visibility="gone" />

            <TimePicker
                android:id="@+id/timePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <EditText
                android:id="@+id/etPartySizetest"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/radious_login"
                android:hint="Party Size"
                android:inputType="number"
                android:maxLength="500"
                android:paddingLeft="15dp"
                android:textColor="@color/application_common_text"
                android:textColorHint="@color/application_text_color_hint"
                android:textCursorDrawable="@null"
                android:textSize="15sp"
                android:textStyle="normal"
                android:visibility="gone" >
            </EditText>

            <EditText
                android:id="@+id/etNotes"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/radious_login"
                android:hint="Notes"
                android:inputType="textMultiLine"
                android:maxLength="500"
                android:paddingLeft="15dp"
                android:textColor="@color/application_common_text"
                android:textColorHint="@color/application_text_color_hint"
                android:textCursorDrawable="@null"
                android:textSize="15sp"
                android:textStyle="normal" >
            </EditText>

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="128dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_color_bg"
                android:onClick="onCustomerSignUp"
                android:text="SEND "
                android:textColor="@color/application_common_text_button_inner"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>