<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/application_background"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/rlheader" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:padding="15dp" >

            <TextView
                android:id="@+id/tvLoginInformation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SETTINGS"
                android:textColor="@color/ratting_color"
                android:textSize="20sp"
                android:textStyle="normal" />

            <RelativeLayout
                android:id="@+id/llMydetails"
                android:layout_width="fill_parent"
                android:layout_height="62dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@drawable/radious_button"
                android:onClick="OnMyDetails" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="MY DETAILS"
                    android:textColor="@color/application_common_text"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/ivCustomerimage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/arrow" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/llOrderHistory"
                android:layout_width="fill_parent"
                android:layout_height="62dp"
                android:layout_alignLeft="@+id/llMydetails"
                android:layout_below="@+id/llMydetails"
                android:layout_marginTop="4dp"
                android:background="@drawable/radious_button"
                android:onClick="OnOrderHistory" >

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="ORDER HISTORY"
                    android:textColor="@color/application_common_text"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/ivCustomerimage1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/arrow" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/llMyFeedBack"
                android:layout_width="fill_parent"
                android:layout_height="62dp"
                android:layout_alignLeft="@+id/llOrderHistory"
                android:layout_below="@+id/llOrderHistory"
                android:layout_marginTop="4dp"
                android:background="@drawable/radious_button"
                android:onClick="OnMyfeedBack" >

                <ImageView
                    android:id="@+id/ivCustomerimage123"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/arrow" />

                <TextView
                    android:id="@+id/textView1234"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="MY FEEDBACK"
                    android:textColor="@color/application_common_text"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/llMyFaviouriteItems"
                android:layout_width="fill_parent"
                android:layout_height="62dp"
                android:layout_alignLeft="@+id/llMyFeedBack"
                android:layout_below="@+id/llMyFeedBack"
                android:layout_marginTop="4dp"
                android:background="@drawable/radious_button"
                android:onClick="OnMyfaviouriteItems" >

                <ImageView
                    android:id="@+id/ivBookaTable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/arrow" />

                <TextView
                    android:id="@+id/ivBookaTableq"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="MY FAVOURITE ITEMS"
                    android:textColor="@color/application_common_text"
                    android:textSize="15sp" />
            </RelativeLayout>

           
        </LinearLayout>
    </ScrollView>

</RelativeLayout>