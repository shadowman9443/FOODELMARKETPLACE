<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/application_background"
    android:orientation="horizontal" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/rlheader" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="25dp" >

            <RelativeLayout
                android:id="@+id/leftColumn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/l1Offer"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/left_offer1"
                    android:clickable="true"
                    android:onClick="onLeftOffer1" >

                    <ImageView
                        android:id="@+id/leftOffer1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" />

                    <TextView
                        android:id="@+id/l1Offer1TextHeader"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/left_offer1_text_bg"
                        android:gravity="left"
                        android:padding="5dp"
                        android:text="ORDER FOOD"
                        android:textColor="#FFFFFFFF"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/l1Offer1TextFooter"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/bottom_plain_offer_text_bg"
                        android:gravity="left"
                        android:padding="5dp"
                        android:text="Food Delivery"
                        android:textColor="#FFFFFFFF"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/l2Offer"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_below="@+id/l1Offer"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/left_offer2"
                    android:clickable="true"
                    android:onClick="onLeftOffer2" >

                    <ImageView
                        android:id="@+id/leftOffer2"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" />

                    <TextView
                        android:id="@+id/l2Offer2TextHeader"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/right_offer2_text_bg"
                        android:gravity="left"
                        android:padding="5dp"
                        android:text="ORDER FOOD"
                        android:textColor="#FFFFFFFF"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/l2Offer2TextFooter"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/bottom_plain_offer_text_bg"
                        android:gravity="left"
                        android:padding="5dp"
                        android:text="Food Delivery"
                        android:textColor="#FFFFFFFF"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/l3Offer"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_below="@+id/l2Offer"
                    android:background="@drawable/left_offer3"
                    android:clickable="true"
                    android:onClick="onLeftOffer3" >

                    <ImageView
                        android:id="@+id/leftOffer3"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" />

                    <TextView
                        android:id="@+id/l3Offer3TextHeader"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/right_offer2_text_bg"
                        android:gravity="left"
                        android:padding="5dp"
                        android:text="ORDER FOOD"
                        android:textColor="#FFFFFFFF"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/l3Offer3TextFooter"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/bottom_left_curve_offer_text_bg"
                        android:gravity="left"
                        android:padding="5dp"
                        android:text="Food Delivery"
                        android:textColor="#FFFFFFFF"
                        android:textSize="12sp" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rightColumn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="10dp"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/r1Offer"
                    android:layout_width="185dp"
                    android:layout_height="185dp"
                    android:background="@drawable/right_offer1"
                    android:clickable="true"
                    android:onClick="onRightOffer1" >

                    <ImageView
                        android:id="@+id/rightOffer1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" />

                    <TextView
                        android:id="@+id/r1Offer1TextHeader"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/right_offer2_text_bg"
                        android:gravity="left"
                        android:padding="10dp"
                        android:text="ORDER FOOD"
                        android:textColor="#FFFFFFFF"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/r1Offer1TextFooter"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/bottom_plain_offer_text_bg"
                        android:gravity="left"
                        android:padding="5dp"
                        android:text="Food Delivery"
                        android:textColor="#FFFFFFFF"
                        android:textSize="15sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/r2Offer"
                    android:layout_width="185dp"
                    android:layout_height="185dp"
                    android:layout_below="@+id/r1Offer"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/right_offer2"
                    android:clickable="true"
                    android:onClick="onRightOffer2" >

                    <ImageView
                        android:id="@+id/rightOffer2"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" />

                    <TextView
                        android:id="@+id/r2Offer2TextHeader"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/left_offer2_text_bg"
                        android:gravity="left"
                        android:padding="10dp"
                        android:text="ORDER FOOD"
                        android:textColor="#FFFFFFFF"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/r2Offer2TextFooter"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/bottom_right_curve_offer_text_bg"
                        android:gravity="left"
                        android:padding="5dp"
                        android:text="Food Delivery"
                        android:textColor="#FFFFFFFF"
                        android:textSize="15sp" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>