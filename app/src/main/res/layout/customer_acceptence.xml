<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/application_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rlheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:paddingLeft="15dp" >

        <ImageView
            android:id="@+id/ivCustomerimage"
            android:layout_width="30dp"
            android:layout_height="70dp"
            android:src="@drawable/heart" />

        <TextView
            android:id="@+id/tvCustomerName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/ivCustomerimage"
            android:text=""
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tvdriverName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvCustomerName"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/ivCustomerimage"
            android:text="Test"
            android:textColor="@color/application_common_text"
            android:textSize="15sp"
            android:textStyle="normal" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tvtext"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:text="You Will Be Charge "
        android:paddingLeft="15dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/application_common_text"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout1"
        android:gravity="center"
        android:orientation="vertical" >

        <View
            android:id="@+id/HeaderShow"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/battery_doctor_divider" />

        <LinearLayout
            android:id="@+id/llButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btndecline"
                android:layout_width="155dp"
                android:layout_height="40dp"
                android:background="#FFFFFF"
                android:onClick="onChangePin"
                android:text="DECLINE "
                android:textColor="@color/application_common_text"
                android:textSize="18sp" />

            <View
                android:id="@+id/divider"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="#D8D8D8" />

            <Button
                android:id="@+id/btnAccept"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:background="#FFFFFF"
                android:gravity="center"
                android:onClick="onChangePin"
                android:text="ACCEPT"
                android:textColor="@color/application_common_text"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>