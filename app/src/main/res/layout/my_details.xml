<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/application_background"
    android:orientation="vertical"
    android:padding="0dp" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/rlheader" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/HeaderShow1"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:padding="10dp" >

            <TextView
                android:id="@+id/tvMydetails"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:text="@string/MyDetails"
                android:textColor="@color/application_common_text"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/myDetailsTitle"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/radious_login"
                android:maxLength="500"
                android:padding="12dp"
                android:text="Title"
                android:textColor="@color/application_common_text"
                android:textColorHint="@color/application_text_color_hint"
                android:textCursorDrawable="@null"
                android:textSize="15sp"
                android:textStyle="normal"
                android:visibility="gone">
            </EditText>

            <EditText
                android:id="@+id/myDetailsFirstName"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/radious_login"
                android:inputType="textCapWords"
                android:maxLength="500"
                android:padding="12dp"
                android:text="First Name"
                android:textColor="@color/application_common_text"
                android:textColorHint="@color/application_text_color_hint"
                android:textCursorDrawable="@null"
                android:textSize="15sp"
                android:textStyle="normal" >
            </EditText>

            <EditText
                android:id="@+id/myDetailsSurname"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/radious_login"
                android:inputType="textCapWords"
                android:maxLength="500"
                android:padding="12dp"
                android:text="Surname"
                android:textColor="@color/application_common_text"
                android:textColorHint="@color/application_text_color_hint"
                android:textCursorDrawable="@null"
                android:textSize="15sp"
                android:textStyle="normal" >
            </EditText>

            <EditText
                android:id="@+id/myDetailsDoor"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/radious_login"
                android:maxLength="500"
                android:padding="12dp"
                android:text="Door No."
                android:textColor="@color/application_common_text"
                android:textColorHint="@color/application_text_color_hint"
                android:textCursorDrawable="@null"
                android:textSize="15sp"
                android:textStyle="normal" >
            </EditText>

            <EditText
                android:id="@+id/myDetailsStreet"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/radious_login"
                android:inputType="textCapWords"
                android:maxLength="500"
                android:padding="12dp"
                android:text="Street"
                android:textColor="@color/application_common_text"
                android:textColorHint="@color/application_text_color_hint"
                android:textCursorDrawable="@null"
                android:textSize="15sp"
                android:textStyle="normal" >
            </EditText>

            <EditText
                android:id="@+id/myDetailsAddress"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/radious_login"
                android:maxLength="500"
                android:padding="12dp"
                android:text="Address"
                android:textColor="@color/application_common_text"
                android:textColorHint="@color/application_text_color_hint"
                android:textCursorDrawable="@null"
                android:textSize="15sp"
                android:textStyle="normal" >
            </EditText>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/HeaderShow1"
                android:layout_centerInParent="true"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="4dp"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/myDetailsTown"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="@drawable/left_non_selected"
                    android:inputType="textCapWords"
                    android:maxLength="500"
                    android:padding="12dp"
                    android:text="Town"
                    android:textColor="@color/application_common_text"
                    android:textColorHint="@color/application_text_color_hint"
                    android:textCursorDrawable="@null"
                    android:textSize="15sp"
                    android:textStyle="normal" >
                </EditText>

                <EditText
                    android:id="@+id/myDetailsPostCode"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/right_non_selected"
                    android:maxLength="500"
                    android:padding="12dp"
                    android:text="Post Code"
                    android:textColor="@color/application_common_text"
                    android:textColorHint="@color/application_text_color_hint"
                    android:textCursorDrawable="@null"
                    android:textSize="15sp"
                    android:textStyle="normal" >
                </EditText>
            </LinearLayout>

            <EditText
                android:id="@+id/myDetailsMobile"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/radious_login"
                android:maxLength="500"
                android:padding="12dp"
                android:text="Mobile No."
                android:textColor="@color/application_common_text"
                android:textColorHint="@color/application_text_color_hint"
                android:textCursorDrawable="@null"
                android:textSize="15sp"
                android:textStyle="normal" >
            </EditText>

            <EditText
                android:id="@+id/myDetailsEmail"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/radious_login"
                android:maxLength="500"
                android:padding="12dp"
                android:text="Email"
                android:textColor="@color/application_common_text"
                android:textColorHint="@color/application_text_color_hint"
                android:textCursorDrawable="@null"
                android:textSize="15sp"
                android:textStyle="normal" >
            </EditText>

            <Button
                android:id="@+id/btnEdit"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/round_color_bg"
                android:onClick="onEdit"
                android:text="UPDATE"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>