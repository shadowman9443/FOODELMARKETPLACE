<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/application_background"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/rlheader" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:padding="15dp" >

            <TextView
                android:id="@+id/tvLoginInformation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INFORMATION"
                android:textColor="@color/application_title_common_text"
                android:textSize="20sp"
                android:textStyle="normal" />

            <RelativeLayout
                android:id="@+id/lloffer"
                android:layout_width="fill_parent"
                android:layout_height="62dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@drawable/radious_button"
                android:onClick="Onoffer" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="OFFERS"
                    android:textColor="@color/application_common_text"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/ivCustomerimage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/arrow" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/llAboutus"
                android:layout_width="fill_parent"
                android:layout_height="62dp"
                android:layout_alignLeft="@+id/llOrderfood"
                android:layout_below="@+id/llOrderfood"
                android:layout_marginTop="4dp"
                android:background="@drawable/radious_button"
                android:onClick="OnAboutus" >

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="ABOUT US"
                    android:textColor="@color/application_common_text"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/ivCustomerimage1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/arrow" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/llFINDUS"
                android:layout_width="fill_parent"
                android:layout_height="62dp"
                android:layout_alignLeft="@+id/llTrackMyOrder"
                android:layout_below="@+id/llTrackMyOrder"
                android:layout_marginTop="4dp"
                android:background="@drawable/radious_button"
                android:onClick="OnFINDUS" >

                <ImageView
                    android:id="@+id/ivCustomerimage123"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/arrow" />

                <TextView
                    android:id="@+id/textView1234"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="FIND US"
                    android:textColor="@color/application_common_text"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/llOPENINGTIMES"
                android:layout_width="fill_parent"
                android:layout_height="62dp"
                android:layout_alignLeft="@+id/llLoyaltyPoints"
                android:layout_below="@+id/llLoyaltyPoints"
                android:layout_marginTop="4dp"
                android:background="@drawable/radious_button"
                android:onClick="OnOPENINGTIMES" >

                <ImageView
                    android:id="@+id/ivBookaTable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/arrow" />

                <TextView
                    android:id="@+id/ivBookaTableq"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="OPENING TIMES"
                    android:textColor="@color/application_common_text"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/llGALLERY"
                android:layout_width="fill_parent"
                android:layout_height="62dp"
                android:layout_alignLeft="@+id/llBookaTable"
                android:layout_below="@id/llBookaTable"
                android:layout_marginTop="4dp"
                android:background="@drawable/radious_button"
                android:onClick="OnGALLERY" >

                <ImageView
                    android:id="@+id/ivSignIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/arrow" />

                <TextView
                    android:id="@+id/txtSignIn"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="GALLERY"
                    android:textColor="@color/application_common_text"
                    android:textSize="15sp" />


            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/llTIPCALCULATER"
                android:layout_width="fill_parent"
                android:layout_height="62dp"
                android:layout_alignLeft="@+id/llBookaTable"
                android:layout_below="@id/llBookaTable"
                android:layout_marginTop="4dp"
                android:background="@drawable/radious_button"
                android:onClick="OnTIPCALCULATER" >

                <ImageView
                    android:id="@+id/ivSignIhn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/arrow" />

                <TextView
                    android:id="@+id/txtSignIhhn"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="TIP CALCULATER"
                    android:textColor="@color/application_common_text"
                    android:textSize="15sp" />


            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>