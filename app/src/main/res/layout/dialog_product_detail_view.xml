<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/application_background" >

    <ScrollView
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlheader" >

        <RelativeLayout
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/transparent_20"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/rldriverinfo"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlheader"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/prdName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="3dp"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <!--
                     <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/getstartedfour1"
                    android:layout_width="250dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="250dp" />
                -->

                <ImageView
                    android:id="@+id/getstartedfour1"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginTop="5dp" />

                <RelativeLayout
                    android:id="@+id/contentlayout"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="0.30"
                    android:background="@color/white"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        android:id="@+id/clickableLayout"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="5dp"
                        android:clickable="true" >

                        <TextView
                            android:id="@+id/itemminussingle"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/round_bk_1"
                            android:gravity="center"
                            android:text="-"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textScaleX="3"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/itemtextsingle"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/round_bk_1"
                            android:gravity="center"
                            android:text="0"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/sellingprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:gravity="left"
                        android:text="Selling Price"
                        android:textColor="@color/application_common_text"
                        android:textSize="15dp" />

                    <LinearLayout
                        android:id="@+id/alergimoniclayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/sellingprice"
                        android:orientation="horizontal"
                        android:weightSum="3" >

                        <TextView
                            android:id="@+id/vImage"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/round_v_n_g"
                            android:contentDescription="@string/app_name"
                            android:gravity="center"
                            android:text="V"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/nImage"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/round_v_n_g"
                            android:contentDescription="@string/app_name"
                            android:gravity="center"
                            android:text="N"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/gImage"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/round_v_n_g"
                            android:contentDescription="@string/app_name"
                            android:gravity="center"
                            android:text="G"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:visibility="gone" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/footerpanel"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:background="#dfe0e0"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/detailsviewtext"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_toLeftOf="@+id/imageplus"
                        android:text=""
                        android:textAlignment="center"
                        android:textColor="@color/application_common_text"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/imageplus"
                        android:layout_width="30dp"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/plus"
                        android:scaleType="fitXY" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>