<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/application_background"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:id="@+id/ltext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlheader"
        android:text="LOYALTY POINTS"
         android:textColor="@color/application_common_text"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/llpointsfield"
        android:layout_width="fill_parent"
        android:layout_height="64dp"
   		android:gravity="center"
        android:background="@drawable/radious_login"
        android:orientation="horizontal"
        android:padding="15dp" 
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/pointstext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You Have"
             android:textColor="@color/application_common_text"
            android:textSize="15sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/pointsnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="points"
            android:textColor="@color/application_common_text_point"
            
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="64dp"
        android:layout_below="@+id/llpointsfield"
        android:layout_marginTop="10dp"
        android:background="@drawable/radious_login"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="15dp" >

        <TextView
            android:id="@+id/worthtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Worth"
                         android:textColor="@color/application_common_text"
            
            android:textSize="15sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/worthprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Â£"
            android:textColor="@color/application_common_text_point"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/footer"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/loyaltycalendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:onClick="OnPressloyaltyCalendar"
            android:background="@drawable/calender_new" />

        <ImageView
            android:id="@+id/loyaltystar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:onClick="OnPressloyaltystar"
            android:background="@drawable/star_new_red" />

        <ImageView
            android:id="@+id/loyaltyquestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:onClick="OnPressloyaltyQuestion"
            android:background="@drawable/question_new" />
    </LinearLayout>

</RelativeLayout>